rule cca_create
    command = cca create $out --copy-from=$in

rule install_plugin
    command = cd `dirname $out` && cca plugin add `basename $out`

rule cp
    command = cp $in $out


build Oplop: cca_create ../ChromeApp

build Oplop/plugins/com.verso.cordova.clipboard: install_plugin || Oplop

build Oplop/www/impl.js: cp impl.js || Oplop
