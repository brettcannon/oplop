{
    "manifest_version": 2,

    "name": "Oplop",
    "description": "A web app for creating consistent account passwords from nicknames and a master password.",
    "version": "2014",

    "offline_enabled": true,

    "icons": {
        "36":  "assets/icons/icon036.png",
        "48":  "assets/icons/icon048.png",
        "57":  "assets/icons/icon057.png",
        "72":  "assets/icons/icon072.png",
        "78":  "assets/icons/icon078.png",
        "96":  "assets/icons/icon096.png",
        "114": "assets/icons/icon114.png",
        "120": "assets/icons/icon120.png",
        "128": "assets/icons/icon128.png",
        "144": "assets/icons/icon144.png",
        "152": "assets/icons/icon152.png"
    },

    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },

    "permissions": ["clipboardWrite", "storage"]
}
